  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@typescript-eslint/parser": "^5.54.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.35.0",
    "prettier": "^2.8.4",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.6",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
